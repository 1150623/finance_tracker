
<%= render 'friends/lookup'%>

<% if @friendships.size > 0 %>

  <table class = "table table-striped">
    <thead>
        <tr>
          <th colsapan ="3" class = "page-header">
            My Friends
          </th>
        </tr>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% @friendships.each do |friend| %>
            <tr>
                <td><%=friend.full_name%></td>
                <td><%=friend.email%></td>
                <td><%= link_to 'View Profile', user_path(friend), class: "btn btn-primary btn-xs" %></td>
                <td>
                    <%= link_to 'Remove Friend', friendship_path(friend),
                                  method: :delete,
                                  data: {confirm: "Are you sure that you want to remove this friendship?"},
                                  class: "btn btn-danger btn-xs"%>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% else %>

  <div class = "row col-lg-12" align = "center">
    <i class="fa fa-frown-o fa_custom fa-5x"></i>
    <p class = "lead">
      You don't have any friends yet... 
    </p>
  </div>

<% end %>