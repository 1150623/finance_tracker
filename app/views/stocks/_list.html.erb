<h3>Your Stock List</h3>

<table class = "table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current Price</th>
            <% if @user.id == current_user.id %>
                <th> </th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @user_stocks.each do |user_stock| %>
            <tr>
                <td><%=user_stock.name%></td>
                <td><%=user_stock.ticker%></td>
                <td><%=user_stock.last_price%></td>
                <% if @user.id == current_user.id %>
                    <td><%= link_to 'Remove from Portfolio', user_stock_path(user_stock),
                                    method: :delete,
                                    data: {confirm: "Are you sure that you want to delete this stock from yout portfolio?"},
                                    class: "btn btn-danger btn-xs"%> </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
