
<% if params[:action] == 'search' %>
  <div class = "results-block">
    <%= bootstrap_flash %>
  </div>
<% end %> 

<% if @users && @users.size > 0 %>
  <div class = "well results-block col-md-10">
    <table class="search-results-table col-md-12">
      <% @users.each do |user| %>
        <tr>
            <td><strong>Name: </strog><%= user.full_name() %></td>
            <td><strong>Email: </strog><%= user.email %></td>
            <td><%= link_to "View Profile", "#",
                                  class: "btn btn-xs btn-default", method: :post %></td>
            <% if current_user.can_add_friend?(user.id) %>
              <td><%= link_to "Add Friend", add_friend_path(user: current_user, friend: user),
                                                    class: "btn btn-xs btn-success", method: :post %></td>
            <!-- <% else %>
              <td><%= link_to "Remove Friend", friendship_path(user.id),
                                                    class: "btn btn-xs btn-danger", method: :delete %></td> -->
            <% end %>

        </tr>
      <% end %>
    </table>
  </div>
<%end%>

